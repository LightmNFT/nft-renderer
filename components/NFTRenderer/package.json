{
  "name": "@lightm-nft/nft-renderer",
  "version": "0.1.2",
  "private": false,
  "scripts": {
    "install": "npm run build-css",
    "build": "tsc --declaration --emitDeclarationOnly --outDir ./dist && npm run build-css && swc ./index.tsx --source-maps=false -C module.type=commonjs -o ./dist/index.js",
    "build-css": "tailwindcss -i ./index.css -o ./dist/index.css",
    "prepare": "npm run build"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@lightm-nft/multi-layer-2d-renderer": "^0.1.0-alpha.4",
    "@types/node": "20.4.5",
    "@types/react": "18.2.16",
    "autoprefixer": "10.4.14",
    "eslint": "8.45.0",
    "react": "18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "3.3.3",
    "tailwindcss-animate": "^1.0.6",
    "typescript": "5.1.6",
    "viem": "^1.4.1",
    "wagmi": "^1.3.9"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.74",
    "prettier-plugin-tailwindcss": "^0.4.1"
  }
}
